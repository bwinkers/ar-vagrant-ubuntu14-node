<!-- Script to handle equal sizing of column height on window resize. -->
<script>
$(window).resize(function(){
    if ($(window).width() <= 800){	
        $( "div" ).removeClass( "equal" )
    };
    if ($(window).width() >= 800){	
        $( ".heq" ).addClass( "equal" )
    };
});
</script>

